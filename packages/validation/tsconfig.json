{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ESNext",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "references": [
    { "path": "../shared" },
    { "path": "../catalog" }
  ]
}
