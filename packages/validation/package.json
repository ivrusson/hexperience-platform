{
  "name": "@hexp/validation",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build && cp dist/src/index.d.ts dist/index.d.ts 2>/dev/null || true",
    "dev": "rslib build --watch",
    "lint": "biome check .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "test": "node --import tsx --test src/__tests__/compatibility.test.ts src/__tests__/conflicts.test.ts src/__tests__/dependencies.test.ts src/__tests__/fileCollisions.test.ts"
  },
  "dependencies": {
    "@hexp/catalog": "workspace:*",
    "@hexp/shared": "workspace:*"
  },
  "devDependencies": {
    "@rslib/core": "^0.18.5",
    "@types/node": "^24.10.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
