{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "ESNext",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "references": [
    { "path": "../../packages/engine" },
    { "path": "../../packages/catalog" },
    { "path": "../../packages/shared" }
  ]
}
